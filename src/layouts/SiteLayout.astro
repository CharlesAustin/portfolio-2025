---
import '../styles/global.css';
const { title = "Austin Atkinson | Frontend Developer" } = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="m-0 w-full h-full flex bg-zinc-950">
        <slot />
	</body>
</html>
